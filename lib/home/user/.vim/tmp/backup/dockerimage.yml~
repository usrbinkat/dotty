name: DockerHubBuild
on:
  push:
    branches: 
      - ccio
  pull_request:
    branches: 
      - ccio
  schedule:
    - cron: '0 2 * * 1' # Weekly on Sundays at 03:00
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Get Git Commit Hash 
      run: |
        export githash="$(git log -1 --pretty=%h)"
        echo "::set-env name=githash::$githash"
    - name: Docker.io + Quay.io Login
      run: |
        echo "${{ secrets.DOCKERHUB_PASSWD }}" | docker login -u ${{ secrets.DOCKERHUB_USER }} --password-stdin; \
        echo "${{ secrets.DOCKERHUB_PASSWD }}" | docker login -u ${{ secrets.DOCKERHUB_USER }} --password-stdin quay.io 
    - name: Docker Build 
      run: |
        docker build . --file ./src/Dockerfile --tag ${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio
    - name: Quay Tag CCIO
      run: |
        docker tag ${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio quay.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio
    - name: Quay Tag Git Commit Hash
      run: |
        docker tag ${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio quay.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio-${{ env.githash }} 
    - name: Docker Tag Git Commit Hash
      run: |
        docker tag ${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio docker.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio-${{ env.githash }} 
    - name: Docker Push docker.io
      run: |
        docker push docker.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio;             \
        docker push docker.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio-${{ env.githash }}
    - name: Docker Push quay.io
      run: |
        docker push quay.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio;                    \
        docker push quay.io/${{ secrets.DOCKERHUB_ORGANIZATION  }}/one:ccio-${{ env.githash }}

